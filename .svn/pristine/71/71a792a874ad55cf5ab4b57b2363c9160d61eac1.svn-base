<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/lv_search_result_bg"
    android:padding="20dp" >

    <TextView
        android:id="@+id/tv_contributed_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="剧烈的刷卡缴费洛杉矶的浪费尽快拉萨的房间了撒剪短发了卡死了福建省的快乐减肥啦"
        android:textColor="@color/back"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_contributed_digest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_contributed_title"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="飞机上课的飞机拉数据库的弗拉所讲的反馈讲述了房价快速链接发蓝色的减肥了撒建安路口的附近善良劫匪蓝色的空间放开啦所讲的发了就爱上了附近拉sd卡"
        android:textColor="@color/gray"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_contributed_digest"
        android:layout_marginTop="10dp"
        android:text="已投稿"
        android:textColor="@color/divider"
        android:textSize="13sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_contributed_digest"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/tv_state"
        android:text="状态："
        android:textColor="@color/divider"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_pay_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_state"
        android:layout_marginTop="10dp"
        android:text="@string/tv_pay_fee"
        android:textColor="@color/yellow2"
        android:textSize="12sp" />

</RelativeLayout>