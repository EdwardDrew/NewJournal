<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/default_distance"
        android:layout_marginRight="@dimen/default_distance"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/reg_et_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_height"
            android:layout_marginTop="40dp"
            android:background="@drawable/selector_et_input"
            android:hint="@string/tv_phone"
            android:inputType="phone"
            android:paddingLeft="8dp"
            android:textColorHint="@color/gray" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_height"
            android:layout_marginTop="20dp"
            android:stretchColumns="*" >

            <TableRow>

                <EditText
                    android:id="@+id/reg_et_verification"
                    android:layout_width="@dimen/default_height"
                    android:layout_height="@dimen/default_height"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/selector_et_input"
                    android:hint="@string/et_verification"
                    android:inputType="number"
                    android:paddingLeft="8dp"
                    android:textColorHint="@color/gray" />

                <Button
                    android:id="@+id/reg_btn_verification"
                    android:layout_width="@dimen/default_height"
                    android:layout_height="@dimen/default_height"
                    android:background="@drawable/btn_common_selector"
                    android:text="@string/btn_verification"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/default_textSize" />
            </TableRow>
        </TableLayout>

        <EditText
            android:id="@+id/reg_et_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_height"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_et_input"
            android:hint="@string/tv_password"
            android:inputType="textPassword"
            android:paddingLeft="8dp"
            android:textColorHint="@color/gray" />

        <EditText
            android:id="@+id/reg_et_repassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_height"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_et_input"
            android:hint="@string/tv_repassword"
            android:inputType="textPassword"
            android:paddingLeft="8dp"
            android:textColorHint="@color/gray" />

        <Button
            android:id="@+id/reg_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_height"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_common_selector"
            android:enabled="false"
            android:text="@string/reg_btn_name"
            android:textColor="@android:color/white"
            android:textSize="@dimen/default_textSize" />
    </LinearLayout>

</RelativeLayout>