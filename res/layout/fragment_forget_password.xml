<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/default_distance"
        android:layout_marginRight="@dimen/default_distance"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/find_password_et_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_height"
            android:layout_marginTop="40dp"
            android:background="@drawable/selector_et_input"
            android:hint="@string/tv_phone"
            android:inputType="phone"
            android:paddingLeft="8dp"
            android:textColorHint="@color/gray" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_height"
            android:layout_marginTop="20dp"
            android:stretchColumns="*" >
            <TableRow>

                <EditText
                    android:id="@+id/find_password_et_verification"
                    android:layout_width="@dimen/default_height"
                    android:layout_height="@dimen/default_height"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/selector_et_input"
                    android:hint="@string/et_verification"
                    android:inputType="number"
                    android:paddingLeft="8dp"
                    android:textColorHint="@color/gray" />

                <Button
                    android:id="@+id/find_password_btn_verification"
                    android:layout_width="@dimen/default_height"
                    android:layout_height="@dimen/default_height"
                    android:background="@drawable/btn_common_selector"
                    android:text="@string/btn_verification"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/default_textSize" />
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/find_password_btn_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_height"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_common_selector"
            android:enabled="false"
            android:text="@string/btn_next"
            android:textColor="@android:color/white"
            android:textSize="@dimen/default_textSize" />
    </LinearLayout>

</RelativeLayout>