<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/default_distance"
        android:layout_marginRight="@dimen/default_distance"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/change_pwd_et_original_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_height"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_et_input"
            android:hint="@string/tv_originalpassword"
            android:inputType="textPassword"
            android:paddingLeft="8dp"
            android:textColorHint="@color/gray" />

        <EditText
            android:id="@+id/change_pwd_et_newpassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_height"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_et_input"
            android:hint="@string/tv_newpassword"
            android:inputType="textPassword"
            android:paddingLeft="8dp"
            android:textColorHint="@color/gray" />

        <EditText
            android:id="@+id/change_pwd_et_renewpassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_height"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_et_input"
            android:hint="@string/tv_renewpassword"
            android:inputType="textPassword"
            android:paddingLeft="8dp"
            android:textColorHint="@color/gray" />

        <Button
            android:id="@+id/change_pwd_btn_commit_change"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_height"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_common_selector"
            android:enabled="false"
            android:text="@string/btn_name_commit_change"
            android:textColor="@android:color/white"
            android:textSize="@dimen/default_textSize" />
    </LinearLayout>

</RelativeLayout>